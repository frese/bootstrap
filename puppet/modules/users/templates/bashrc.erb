# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias pdsh='pdsh -R ssh'

<% if (scope['info']['color_terminal']) %>

alias ls='ls -p --color=auto'

if [[ $EUID == 0 ]]; then
  USER_COLOR="1;91" # red user for root
else
  USER_COLOR="1;32" # green user for normal users
fi
export PS1="\[\e[${USER_COLOR}m\]\u\[\e[0;39m\]@\[\e[<%= scope['prompt_host_color'] %>m\]\h\[\e[0;39m\]:\[\e[1;33m\]\w\[\e[0;39m\]\[\e[1;37m\]\[\e[0;39m\]$ "

<% end %>
